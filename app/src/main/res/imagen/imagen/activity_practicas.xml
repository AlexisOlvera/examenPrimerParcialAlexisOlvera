<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cecyt9.alexisolveramendoza.calculadoraalexisolvera.Practicas">

    <ScrollView
        style="@android:style/Widget.Material.Light.ScrollView"
        android:layout_width="353dp"
        android:layout_height="419dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPracCalcu"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickCalcu"
                android:text="Calculadora" />

            <Button
                android:id="@+id/btnPracMail"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickEnviaMail"
                android:text="ENVIAR MAIL" />

            <Button
                android:id="@+id/btnPracNav"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickNav"
                android:text="Navegador" />

            <Button
                android:id="@+id/btnPracImagen"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickImagen"
                android:text="Imagen" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="202dp"
        android:layout_height="48dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:text="PRÃCTICAS"
        android:textSize="36dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
